    <script src="/socket.io/socket.io.js"></script>
    <script src="index.js"></script>
    <script>
        // FunciÃ³n global para actualizar el link del carrito en el navbar
        function updateCartNavLink() {
            const cartId = localStorage.getItem('cartId');
            const cartNavLink = document.getElementById('cart-nav-link');
            if (cartId && cartNavLink) {
                cartNavLink.href = `/carts/${cartId}`;
            }
        }

        // FunciÃ³n para ir al carrito, creando uno si no existe
        async function goToCart(event) {
            event.preventDefault();
            let cartId = localStorage.getItem('cartId');

            if (!cartId) {
                try {
                    // Crear un nuevo carrito
                    const response = await fetch('/api/carts', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    const data = await response.json();
                    if (data.status === 'success') {
                        cartId = data.payload._id;
                        localStorage.setItem('cartId', cartId);
                    }
                } catch (error) {
                    console.error('Error al crear carrito:', error);
                    alert('Error al crear el carrito');
                    return;
                }
            }

            // Redirigir al carrito
            window.location.href = `/carts/${cartId}`;
        }

        // Actualizar link del carrito al cargar la pÃ¡gina
        document.addEventListener('DOMContentLoaded', function () {
            updateCartNavLink();
        });
    </script>
</body>

